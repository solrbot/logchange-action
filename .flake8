[flake8]
max-line-length = 127
max-complexity = 10
# E402: module level import not at top of file (unavoidable due to sys.path manipulation)
# W503: line break before binary operator (black style preference)
ignore = E402, W503
exclude = .git,__pycache__,.venv,venv,build,dist
per-file-ignores =
    action/src/changelog_generator.py: E501
    action/src/main.py: E501
    test_generator.py: C901
    tests/*: C901
